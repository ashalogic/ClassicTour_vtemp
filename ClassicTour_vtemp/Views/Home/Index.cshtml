
<div ng-controller="HomeCtrl" class="container">
    <div class="row">
        <div class="col">

            <div class="row">
                <div class="col">
                    <p dir="rtl" class="mb-0 pt-1 pb-1 text-white text-center" style="background-color:rgba(76, 175, 80, 0.7)">با کلاسیک تور با کلاس سفر کنید</p>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-4-4.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-1-1.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-3-3.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-7-7.jpg" alt="Second slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div> 
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div> 
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div> 
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div> 
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div> 
                            <div class="carousel-item">
                                <img class="d-block w-100" src="http://www.danatours.ir/wp-content/uploads/home-slider-5-5.jpg" alt="Second slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

            <br />

            <div class="row">
                <div class="col" style="background-color:rgba(76, 175, 80, 0.7)">

                    <div class="input-group input-group-lg rounded-0">
                        <input dir="rtl" ng-model="tour_search" type="text" class="form-control rounded-0" placeholder="جستجو تور" aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append rounded-0">
                            <span dir="rtl" class="input-group-text rounded-0" id="basic-addon2" style="background-color:#E8F5E9;color:#4CAF50">
                                <i class="fas fa-search"></i>
                            </span>
                            @*<span dir="rtl" class="input-group-text" id="basic-addon2" style="border-color:#4CAF50;background-color:#4CAF50;color:#fff">تور مورد علاقه ات رو پیدا کن !</span>*@
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col shadow">
                    <hr />
                    @* Step A *@
                    <div ng-show="step_a" class="row">
                        <div class="col">
                            <div dir="rtl" class="row">
                                <div ng-repeat="tour in tourlist | filter : tour_search" class="col-sm-3">
                                    <div class="card border-teal">
                                        <img class="card-img-top rounded-0" src="{{tour.img}}" alt="{{tour.alt}}">
                                        <p class="text-center pt-1 pb-1 text-white" style="background-color:rgba(76, 175, 80, 0.7)"> تاریخ شروع : {{tour.startdate}}</p>
                                        <div class="card-body text-center">

                                            <h5 dir="rtl" class="card-title text-center">تور {{tour.title}}</h5>
                                            <small dir="ltr">{{tour.tourcode}} : کد تور</small>
                                            <hr />
                                            <p class="card-text text-center">

                                            </p>
                                            <p dir="rtl" class="card-text text-center">
                                                قیمت : <span style="color: #4CAF50"><b>{{tour.price | currency:"":0 }}</b></span> تومان
                                            </p>
                                            <hr />
                                            <a ng-click="setdetails($index)" class="btn btn-outline-success btn-block">خرید و جزئیات</a>
                                        </div>
                                    </div>
                                </div>
                                <div ng-show="(tourlist |filter: tour_search ).length == 0" class="col">
                                    <hr />
                                    <h3 class="text-center" dir="rtl">تور مورد نظر یافت نشد !</h3>
                                </div>
                            </div>
                            <hr />
                            <nav ng-show="false" aria-label="Page navigation example">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">قبلی</a>
                                    </li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">بعدی</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                    @* Step B *@
                    <div ng-show="step_b" class="row">
                        <div class="col-sm-8 mx-auto">
                            <div class="row">
                                <div dir="ltr" class="col-sm-6 text-center">
                                    <table class="table table-striped">
                                        <tbody>
                                            <tr>
                                                <td>قیمت</td>
                                                <td>
                                                    <span style="color: #4CAF50"><b>{{details.price | currency:"":0 }}</b></span> تومان
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>شب</td>
                                                <td>
                                                    {{details.nights}}
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>روز</td>
                                                <td>{{details.days}}</td>
                                            </tr>
                                            <tr>
                                                <td>ظرفیت باقی مانده</td>
                                                <td>{{details.capacity}}</td>
                                            </tr>
                                            <tr>
                                                <td>تاریخ شروع</td>
                                                <td>{{details.startdate}}</td>
                                            </tr>
                                            <tr>
                                                <td>تاریخ پایان</td>
                                                <td>{{details.enddate}}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-sm-6">
                                    <div class="card shadow-none rounded-0 mt-0 mb-0">
                                        <div class="card-header">
                                            <h5 dir="rtl" class="card-title mb-0 mt-0 text-center">شهر {{details.city}}</h5>
                                        </div>
                                        <div class="card-body">
                                            <img class="img-thumbnail img-fluid mx-auto rounded-0" src="{{details.img}}" alt="{{details.alt}}">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="card text-right">
                                <div class="card-body">
                                    <hr />
                                    <div class="row">
                                        <div class="col">
                                            <input ng-click="nextstep()" class="btn btn-success btn-block" type="button" value="خرید" />
                                        </div>
                                        <div class="col">
                                            <input ng-click="previousstep()" class="btn btn-danger btn-block" type="button" value="بازگشت به لیست تور ها" />
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="row text-center">
                                        <div class="col">
                                            <div class="row">
                                                <div class="col">
                                                    <h3>
                                                        قیمت : <span style="color: #4CAF50"><b>{{details.price | currency:"":0 }}</b></span> تومان
                                                    </h3>

                                                </div>
                                                <div class="col">
                                                    <h3>{{details.title}}</h3>
                                                </div>
                                            </div>
                                            <div class="row">

                                            </div>
                                            <hr />
                                            <p dir="rtl" class="text-justify">
                                                {{details.description}}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <div dir="rtl" class="card-footer text-center">
                                    @*<p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.</p>*@
                                    @*<input class="btn btn-success btn-block" type="button" value="نمایش جزئیات" />*@
                                </div>
                            </div>
                            <br />
                        </div>
                    </div>
                    @* Step C *@
                    <div ng-show="step_c" dir="rtl" class="row ">
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <div class="card">
                                        <div class="card-header">
                                            <br />
                                        </div>
                                        <div class="card-body">
                                            <table class="table table-bordered text-center">
                                                <tbody>
                                                    <tr>
                                                        <td>نام تور</td>
                                                        <td>تاریخ شروع</td>
                                                        <td>تاریخ پایان</td>
                                                        <td>قیمت</td>
                                                        <td>ظرفیت باقی مانده</td>
                                                        <td>تعداد افراد</td>
                                                        <td>قیمت کل</td>
                                                    </tr>
                                                    <tr>
                                                        <td>{{details.title}}</td>
                                                        <td>{{details.startdate}}</td>
                                                        <td>{{details.enddate}}</td>
                                                        <td>{{details.price | currency:"":0}} </td>
                                                        <td>{{details.capacity}}</td>

                                                        <td>
                                                            <div dir="ltr" class="input-group text-center">
                                                                <div class="input-group-prepend">
                                                                    <span class="input-group-text">نفر</span>
                                                                </div>
                                                                <input type="number" ng-minlength="1" min="1" max="{{details.capacity}}" step="1" ng-maxlength="{{details.capacity}}" class="form-control text-center" ng-init="count=1" ng-model="count" value="1" />
                                                            </div>
                                                        </td>

                                                        <td dir="rtl">{{details.price * count | currency:"":0}} تومان</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="card-footer">
                                            <br />
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <hr />
