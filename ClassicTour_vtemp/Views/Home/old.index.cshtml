<div ng-controller="main">

    <nav dir="rtl" style="opacity:0.8;border-bottom: dashed 3px #009688" class="navbar navbar-expand-lg navbar-light bg-light fixed-top BKoodakBold text-right">
        <a class="navbar-brand BTitrBold text-teal border-bottom p-1" style="color:#009688" title="بازگشت به خانه" data-toggle="tooltip" data-placement="bottom" href="/">کلاسیک تور</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">صفحه اصلی<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">درباره ما</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">تماس با ما</a>
                </li>
            </ul>
            <ul class="navbar-nav mr-auto">
                @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </nav>




    <div class="container text-center BKoodakBold mt-5">

        @if (User.Identity.IsAuthenticated)
        {
            <br />
        }
        <br />

        <div class="row">
            <div class="col">
                <h1 class="text-right BTitrTGEBold">کلاسیک تور</h1>
                <h2>با کلاس سفر کنید</h2>
            </div>
        </div>
    </div>

    <div class="container rounded" style="border: dashed 3px #009688">
        <hr style="border-color: #009688 !important;" />
        <div class="row">
            <div class="col">
                <img class="img-fluid img-thumbnail" src="https://callmytechie.com/wp-content/uploads/2017/05/best-seo-agencies-awards1-400x200.png" />
                <hr style="border-color: #009688 !important;" />
                <img class="img-fluid img-thumbnail" src="http://www.thewebempire.us/images/stories/infographichomepagesmall.png" />
            </div>
            <div class="col-sm-6">
                <div id="carouselExampleFade" class="carousel slide carousel-fade mt-2" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100 border-right border-left" style="border-color: #009688 !important;" src="http://dqmedia.findjobs.eu/image_uploads/gallery_image/59/gallery_image.png" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 border-right border-left" style="border-color: #009688 !important;" src="http://dqmedia.findjobs.eu/image_uploads/gallery_image/60/gallery_image.png" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 border-right border-left" style="border-color: #009688 !important;" src="http://dqmedia.findjobs.eu/image_uploads/gallery_image/61/gallery_image.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 border-right border-left" style="border-color: #009688 !important;" src="http://dqmedia.findjobs.eu/image_uploads/gallery_image/62/gallery_image.png" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100 border-right border-left" style="border-color: #009688 !important;" src="http://dqmedia.findjobs.eu/image_uploads/gallery_image/65/gallery_image.png" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="col">
                <img class="img-fluid img-thumbnail" src="https://www.unikwan.com/img/custom/flat-design/hero-main-icon.png" />
                <hr style="border-color: #009688 !important;" />
                <img class="img-fluid img-thumbnail" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTbaz8mcC7ORtq7ktVZXZ6NlNUspOtzGdkeulWnl4XX6jtncCJg" />
            </div>
        </div>
        <hr style="border-color: #009688 !important;" />
        <div class="row">
            <div class="col">
                <div class="input-group input-group-lg mb-3">
                    <input ng-model="tour_search" type="text" class="form-control text-center" placeholder="" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                        <span dir="rtl" class="input-group-text" id="basic-addon2" style="border-color:#00796B;background-color:#009688;color:#fff">تور مورد علاقه ات رو پیدا کن !</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                @* Step A *@
                <div ng-show="step_a" class="row">
                    <div class="col">
                        <hr />
                        <div dir="rtl" class="row text-center">
                            <div ng-repeat="tour in tourlist | filter: tour_search" class="col-sm-4">
                                <div class="card mt-3">
                                    <img class="card-img-top" src="{{tour.img}}" alt="{{tour.alt}}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{tour.title}}</h5>
                                        @*<p class="card-text">{{tour.description}}</p>*@
                                    </div>
                                    <div class="card-footer">
                                        <input class="btn btn-primary btn-block" ng-click="setdetails($index)" type="button" value="نمایش جزئیات" />
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">قبلی</a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">بعدی</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                @* Step B *@
                <div ng-show="step_b" class="row">
                    <div class="col">
                        <div class="card text-right">
                            <img class="card-img-top" style="height:240px" src="{{details.img}}" alt="{{details.alt}}">
                            <div class="card-body">
                                <hr />
                                <div class="row">
                                    <div class="col">
                                        <input ng-click="nextstep()" class="btn btn-success btn-block" type="button" value="خرید" />
                                    </div>
                                    <div class="col">
                                        <input ng-click="previousstep()" class="btn btn-danger btn-block" type="button" value="بازگشت به لیست تور ها" />
                                    </div>
                                </div>
                                <hr />
                                <div class="row text-center">
                                    <div dir="rtl" class="col">
                                        <table class="table table-striped">
                                            @*<thead>
                                                <tr>
                                                    <th scope="col">First</th>
                                                    <th scope="col">Last</th>
                                                </tr>
                                            </thead>*@
                                            <tbody>
                                                <tr>
                                                    <td>قیمت</td>
                                                    <td>{{details.price}}</td>
                                                </tr>
                                                <tr>
                                                    <td>شب</td>
                                                    <td>{{details.nights}}</td>
                                                </tr>
                                                <tr>
                                                    <td>روز</td>
                                                    <td>{{details.days}}</td>
                                                </tr>
                                                <tr>
                                                    <td>ظرفیت باقی مانده</td>
                                                    <td>{{details.capacity}}</td>
                                                </tr>
                                                <tr>
                                                    <td>تاریخ شروع</td>
                                                    <td>{{details.startdate}}</td>
                                                </tr>
                                                <tr>
                                                    <td>تاریخ پایان</td>
                                                    <td>{{details.enddate}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-md-8">
                                        <h3>{{details.title}}</h3>
                                        <hr />
                                        <p dir="rtl" class="text-justify">
                                            {{details.description}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div dir="rtl" class="card-footer text-center">
                                <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است.</p>
                                @*<input class="btn btn-success btn-block" type="button" value="نمایش جزئیات" />*@
                            </div>
                        </div>
                    </div>
                </div>
                @* Step C *@
                <div ng-show="step_c" dir="rtl" class="row ">
                    <div class="col">
                        <div class="row">
                            <div class="col">
                                <div class="card">
                                    <div class="card-header">
                                        <br />
                                    </div>
                                    <div class="card-body">
                                        <table class="table table-bordered text-center">
                                            <tbody>
                                                <tr>
                                                    <td>نام تور</td>
                                                    <td>تاریخ شروع</td>
                                                    <td>تاریخ پایان</td>
                                                    <td>قیمت</td>
                                                    <td>ظرفیت باقی مانده</td>
                                                    <td>تعداد افراد</td>
                                                    <td>قیمت کل</td>
                                                </tr>
                                                <tr>
                                                    <td>{{details.title}}</td>
                                                    <td>{{details.startdate}}</td>
                                                    <td>{{details.enddate}}</td>
                                                    <td>{{details.price}}</td>
                                                    <td>{{details.capacity}}</td>

                                                    <td>
                                                        <div dir="ltr" class="input-group text-center">
                                                            <div class="input-group-prepend">
                                                                <span class="input-group-text">نفر</span>
                                                            </div>
                                                            <input type="number" ng-minlength="1" min="1" max="{{details.capacity}}" step="1" ng-maxlength="{{details.capacity}}" class="form-control text-center" ng-init="count=1" ng-model="count" value="1" />
                                                        </div>
                                                    </td>

                                                    <td>{{details.price * count}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="card-footer">
                                        <br />
                                    </div>
                                </div>

                            </div>
                        </div>
                        <hr />
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="row">
                                <div class="col-md-4 text-center">
                                    <div class="card">
                                        <div class="card-header">
                                            <label>مشخصات فردی</label>
                                        </div>
                                        <div class="card-body text-right">
                                            <h6>نام : @ViewBag.cinfo_firstname </h6>
                                            <h6>نام خانوادگی : @ViewBag.cinfo_lastname</h6>
                                            <h6>شماره تماس : @ViewBag.cinfo_phonenumber</h6>
                                            <h6>آدرس ایمیل : @ViewBag.cinfo_email</h6>
                                        </div>
                                    </div>
                                </div>
                                <div disabled class="col disabled">
                                    <div class="row">
                                        <div class="col">
                                            @*<img class=" w-100" style="height:240px" src="https://www.chapmatin.com/wp-content/uploads/2017/10/%D8%B1%D9%88%D8%B4-%D9%BE%D8%B1%D8%AF%D8%A7%D8%AE%D8%AA.jpg" />*@
                                            <img class="img-fluid" src="https://www.chapmatin.com/wp-content/uploads/2017/10/%D8%B1%D9%88%D8%B4-%D9%BE%D8%B1%D8%AF%D8%A7%D8%AE%D8%AA.jpg" />
                                            <hr />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group text-right">
                                                <label for="exampleFormControlSelect1">انتخاب روش پرداخت</label>
                                                <hr />

                                                <select dir="rtl" class="form-control" id="exampleFormControlSelect1">
                                                    <option>پرداخت آنلاین</option>
                                                    <option>پرداخت اعتباری</option>
                                                    <option>کارت به کارت</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group text-right">
                                                <label for="exampleFormControlSelect1">انتخاب درگاه پرداخت</label>
                                                <hr />
                                                <select dir="rtl" class="form-control" id="exampleFormControlSelect1">
                                                    <option>زرین پال</option>
                                                </select>
                                                <br />
                                                <input type="button" ng-click="buy()" class="btn btn-warning btn-block" value="پرداخت با زرین پال" />
                                                <br />
                                                <div class="text-center">
                                                    <script src="https://cdn.zarinpal.com/trustlogo/v1/trustlogo.js" type="text/javascript"></script>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-md-4">
                                    @Html.Partial("_Login")
                                </div>
                                <div class="col">
                                    <div class="alert alert-warning text-center" role="alert">
                                        کاربر گرامی برای ادامه فراید خرید لطفا به حساب کاربری خود وارد شوید
                                    </div>
                                    <hr />
                                    <div class="card">
                                        <div class="card-body text-center">
                                            <h5>
                                                برای  عضویت در کلاسیک تور و دریافت اطلاعات بیشتر با ما تماس بگیرید
                                            </h5>
                                            <hr />
                                            <h4 dir="ltr" class="text-center">
                                                071 364 11110
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
            <div class="col-md-2 text-center">
                <hr />
                <hr />
                <img class="img-fluid" src="http://www.toolsir.com/weather/images/bg1.png" />
            </div>
        </div>
        <br />
    </div>

</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>