<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header text-white text-center BTitrBold">
                <h5 class="text-right BTitrBold mb-0">
                    <i title="برای افزودن مشتری جدید از فرم زیر استفاده کنید" data-toggle="tooltip" data-placement="right" class="fas fa-plus-circle ml-1"></i> افزودن مشتری جدید
                </h5>
            </div>
            <div class="card-body">

                <div ng-show="Customers_Clipboard_Listed.length!=0&&Customers_Clipboard_Listed.length!=null" class="row">
                    <div class="col">
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>
                                {{Customers_Clipboard_Listed.length}}
                            </strong> رکورد با موفقیت دریافت شد
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <textarea class="form-control" ng-model="Customers_Clipboard" rows="3"></textarea>
                    </div>
                    <div class="col">
                        <button ng-click="Show_Customers_Clipboard()" type="button" class="btn btn-outline-warning btn-block">بررسی</button>
                        <button type="button" class="btn btn-outline-info btn-block" data-toggle="modal" data-target="#Customers_ClipboardModal">نمایش</button>
                    </div>
                </div>

                <div class="modal fade" id="Customers_ClipboardModal" tabindex="-1" role="dialog" aria-labelledby="Customers_ClipboardModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div dir="ltr" class="modal-header">
                                <button type="button" class="btn btn-outline-danger m-2" data-dismiss="modal">بستن</button>
                                <button ng-click="Add_Customer_Range()" type="button" class="btn btn-outline-success m-2 btn-block">آپلود و ثبت نام مشتریان</button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col">
                                        <table class="table table-striped table-bordered table-hover table-responsive text-center">
                                            <thead>
                                                <tr>
                                                    <th scope="col">نام</th>
                                                    <th scope="col">نام خانوادگی</th>
                                                    <th scope="col">کد ملی</th>
                                                    <th scope="col">جنسیت</th>
                                                    <th scope="col">شماره تماس</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="x in Customers_Clipboard_Listed">
                                                    <th>{{x.fname}}</th>
                                                    <th>{{x.lname}}</th>
                                                    <th>{{x.ncode}}</th>
                                                    <th>{{x.gender}}</th>
                                                    <th>{{x.phone}}</th>
                                                <tr />
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                            </div>
                        </div>
                    </div>
                </div>

                <form name="add_customer">
                    <hr />
                    <div class="row">
                        <div class="col">
                            <input ng-class="{ 'is-invalid' :  add_customer.first_name.$invalid && add_customer.first_name.$dirty , 'is-valid': add_customer.first_name.$valid}" name="first_name" ng-model="first_name" type="text" class="form-control" placeholder="نام" required>
                        </div>
                        <div class="col">
                            <input ng-class="{ 'is-invalid' :  add_customer.last_name.$invalid && add_customer.last_name.$dirty , 'is-valid': add_customer.last_name.$valid}" name="last_name" ng-model="last_name" type="text" class="form-control" placeholder="نام خانوادگی" required>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <input mask="9999999999" ng-class="{ 'is-invalid' :  add_customer.national_code.$invalid && add_customer.national_code.$dirty , 'is-valid': add_customer.national_code.$valid}" name="national_code" ng-model="national_code" dir="ltr" type="text" class="form-control" placeholder="کد ملی" required>
                        </div>
                        <div class="col">
                            <select ng-init="gender='زن'" ng-model="gender" class="form-control">
                                <option selected>زن</option>
                                <option>مرد</option>
                            </select>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <input mask="09999999999" ng-class="{ 'is-invalid' :  add_customer.phone_number.$invalid && add_customer.phone_number.$dirty , 'is-valid': add_customer.phone_number.$valid}" name="phone_number" ng-model="phone_number" dir="ltr" type="text" class="form-control" placeholder="09*********" required>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <div dir="ltr" class="input-group">
                                <div class="input-group-prepend">
                                    <button ng-click="makepassword()" class="btn btn-outline-info" type="button" id="button-addon1">بساز</button>
                                </div>
                                <input ng-class="{ 'is-invalid' :  add_customer.pass_word.$invalid && add_customer.pass_word.$dirty , 'is-valid': add_customer.pass_word.$valid}" name="pass_word" dir="ltr" ng-model="pass_word" type="text" class="form-control" placeholder="گذرواژه" required>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col">
                            <button dir="rtl" ng-click="Add_Customer()" class="btn btn-outline-success btn-block mx-auto">
                                مشتری جدید رو اضاف کن !
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <img class="img-fluid mx-auto" src="~/Content/img/panel_customers.png" />
        <hr />
        <div class="jumbotron text-center">
            <h1 class="display-4">بازم مشتری ^_^</h1>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <hr />
        <h5 class="text-center BTitrBold">
            .:: لیست مشتریان ::.
        </h5>
        <input ng-model="search_customer" class="form-control mt-3 text-center" />
        <table class="table table-hover table-bordered table-striped mt-3">
            <thead>
                <tr class="text-center">
                    <th scope="col">#</th>
                    <th scope="col">نام و نام خانوادگی</th>
                    <th scope="col">شماره موبایل</th>
                    <th scope="col">عملیات</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="customer in customerlist | filter : search_customer">
                    <th scope="row">{{$index+1}}</th>
                    <td>{{customer.first_name}} {{customer.last_name}}</td>
                    <td class="text-left">{{customer.PhoneNumber}}</td>
                    <td class="text-center">
                        <div dir="ltr" class="btn-group btn-group-sm" role="group">
                            <button title="بازیابی رمز عبور" data-toggle="tooltip" data-placement="top" type="button" class="btn btn-secondary">
                                <i class="fas fa-key"></i>
                            </button>
                            <button title="بلاک کردن" data-toggle="tooltip" data-placement="top" type="button" class="btn btn-danger">
                                <i class="fas fa-ban"></i>
                            </button>
                            <button title="حذف کردن" data-toggle="tooltip" data-placement="top" type="button" class="btn btn-warning">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>