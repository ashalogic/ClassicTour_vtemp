
<div ng-controller="ManagementCtrl" ng-init="Get_Customers();Get_Orders();Get_Tours();" class="container">
    <div ng-show="AlertVisibility" class="alert {{AlertColor}} text-center">
        {{AlertMessage}}
        <button type="button" class="close" ng-click="hidemsg()">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <div dir="rtl" class="row text-right mt-4">
        <div class="col-2">
            <div class="row">
                <div class="col text-center">
                    @if (ViewBag.theme == ClassicTour_vtemp.Models.Gender.male)
                    {
                        <img class="img-fluid img-thumbnail rounded-circle mx-auto" src="~/Content/img/seller_male.png" />
                    }
                    else
                    {
                        <img class="img-fluid img-thumbnail rounded-circle mx-auto" src="~/Content/img/seller_female.png" />
                    }
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <hr />
                    <h4 dir="rtl" title="! منزل خودتان است" data-toggle="tooltip" data-placement="bottom" class="text-center mt-3"><span class="badge badge-secondary">نمایه فروشنده</span></h4>
                    <br />
                    <div dir="ltr" class="nav flex-column nav-pills text-center" id="NavMenu" role="tablist" aria-orientation="vertical">
                        <a class="nav-link" id="v-pills-orders-tab" data-toggle="pill" href="#v-pills-orders" role="tab" aria-controls="v-pills-orders" aria-selected="false">
                            سفارشات
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-10">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="v-pills-orders" role="tabpanel" aria-labelledby="Order_Tab">
                    @Html.Partial("Manage/_OrdersMPartial")
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $('[data-toggle="tooltip"]').tooltip();
    })
</script>
